<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.addTouristAttraction"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/adminToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add new Attraction"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/touristAttractionName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the attraction name here"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"/>

    <EditText
        android:id="@+id/touristAttractionAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the attraction address here"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="30dp"/>

    <EditText
        android:id="@+id/touristAttractionDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the attraction description here"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="30dp"/>


    <ImageView
        android:id="@+id/touristAttractionImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="30dp" />

    <Button
        android:id="@+id/addTouristAttractionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:background="@color/black"
        android:padding="15dp"/>

</LinearLayout>